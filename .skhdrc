# Modes
:: main : sketchybar --set apple.logo icon.color=0xffffffff
:: scripts @ : sketchybar --set apple.logo icon.color=0xe6e02e85

# Mode Navigation
# hyper - x ; scripts
# scripts < escape ; main
# hyper - z ; main

# Resize Window
ctrl + shift - left : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0 || yabai -m window --resize left:50:0 || yabai -m window --resize right:50:0
ctrl + shift - right : yabai -m window --resize left:50:0 || yabai -m window --resize right:50:0 || yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
ctrl + shift - up : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50 || yabai -m window --resize top:0:50 || yabai -m window --resize bottom:0:50
ctrl + shift - down : yabai -m window --resize top:0:50 || yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50

# Float Window
hyper - 0x14 : yabai -m window --toggle float --grid 5:5:1:1:3:3

# Moving windows between spaces: shift + lalt - {1, 2, 3, 4, p, n } (Assumes 3 Spaces Max per Display)
shift + lalt - 0x15 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] \
                  && yabai -m window --space $SPACES[3]

# Scroll Through Stack
hyper - 0x13 : yabai -m window --focus stack.next || yabai -m window --focus stack.first
hyper - 0x12 : yabai -m window --focus stack.prev || yabai -m window --focus stack.last

# Yabai SKHD Sketchybar refresh
hyper + fn - f1 : sketchybar --reload
hyper + fn - f2 : yabai --restart-service && sketchybar --reload
hyper + fn - f3 : skhd --restart-service

# Open Apps
hyper - e : open ~/
hyper - t : open -n -a "iTerm"
hyper - d : open -n -a "DaVinci Resolve"
hyper - b : open -n -a "Safari"
hyper - s : open -n -a "Spotify"
hyper - o : open -n -a "Obsidian"
hyper - w : open -n -a "Telegram"

# Davinci specific keys
#

# Throwing spaces into displays
hyper - 0x18 : yabai -m space 1 --display 1 && yabai -m space 2 --display 1
hyper - 0x19 : yabai -m space 3 --display 2 && yabai -m space 4 --display 2
hyper - 0x20 : yabai -m space 5 --display 3 && yabai -m space 6 --display 3
