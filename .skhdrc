:: default : sketchybar --bar border_color="0xffccff00" && sketchybar --bar color="0x732a2735" && borders active_color="0xffccff00" && sketchybar --set apple.logo icon.color="0xffffffff" && borders background_color="0x732a2735" && yabai -m config active_window_opacity 1.0 && yabai -m config normal_window_opacity 0.95
:: scripts @ : sketchybar --bar border_color="0xff4fffe7" && sketchybar --bar color="0x820d679b" && borders active_color="0xff4fffe7" && sketchybar --set apple.logo icon.color="0xff4fffe7" && borders background_color="0xff1b9de2"
:: lockdown @ : sketchybar --bar border_color="0xffca1b04" && sketchybar --bar color="0xd9140e14" && borders active_color="0xffca1b04" && sketchybar --set apple.logo icon.color="0xffca1b04" && borders background_color="0xff5b0909" && yabai -m config active_window_opacity 0.45 && yabai -m config normal_window_opacity 0.45

