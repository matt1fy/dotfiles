:: scripts @ : sketchybar --bar border_color="0xff4fffe7" && sketchybar --bar color="0x820d679b" && borders active_color="0xff4fffe7" && sketchybar --set apple.logo icon.color="0xff4fffe7" && borders background_color="0xff1b9de2"
