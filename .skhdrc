# Colors GRAYTRANS=0x732a2735 FROSTEDGLASS=0x4dbad2d2, VAMPBLACK=0xd9140e14, LIMEYGREEN=0xffccff00, HOTRED=0xffca1b04, DEEPRED=0xff5b0909
# NTS, USE AWK MOVING FORWARD

# Mode Navigation
hyper - z ; scripts
hyper - q ; lockdown
scripts < escape ; default
scripts < fn - f3 ; default
scripts < hyper - q ; lockdown
lockdown < ctrl - d ; default
lockdown < ctrl - z ; scripts

# Resize Window
default < ctrl + shift - left : yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0 || yabai -m window --resize left:50:0 || yabai -m window --resize right:50:0
default < ctrl + shift - right : yabai -m window --resize left:50:0 || yabai -m window --resize right:50:0 || yabai -m window --resize left:-50:0 || yabai -m window --resize right:-50:0
default < ctrl + shift - up : yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50 || yabai -m window --resize top:0:50 || yabai -m window --resize bottom:0:50
default < ctrl + shift - down : yabai -m window --resize top:0:50 || yabai -m window --resize bottom:0:50 || yabai -m window --resize top:0:-50 || yabai -m window --resize bottom:0:-50

# Float Window
#hyper - 0x14 : yabai -m window --toggle float --grid 5:5:1:1:3:3
scripts < hyper - 0x15 : yabai -m window --toggle float --grid 1:1:0:0:1:1
scripts < hyper - 0x17 : yabai -m window --toggle float --grid 5:5:0:0:2:5
scripts < hyper - 0x16 : yabai -m window --toggle float --grid 5:5:2:0:3:5
scripts < hyper - 0x19 : yabai -m window --toggle float --grid 5:5:-1:0:2:2
scripts < hyper - 0x1A : yabai -m window --toggle float --grid 5:5:0:0:3:5
scripts < hyper - 0x1C : yabai -m window --toggle float --grid 5:5:3:0:2:5

# Swap window positions, Hyper - 1
default < hyper + fn - f1 : yabai -m window --warp west && yabai -m window --focus east || yabai -m window --warp east --focus && yabai -m window --focus west || yabai -m window --warp north && yabai -m window --focus south || yabai -m window --warp south --focus && yabai -m window --focus north
default < hyper - 0x41 : yabai -m window --warp west && yabai -m window --focus east || yabai -m window --warp east --focus && yabai -m window --focus west || yabai -m window --warp north && yabai -m window --focus south || yabai -m window --warp south --focus && yabai -m window --focus north
# Scroll through stacks, Hyper - 2
default < hyper + fn - f2 : yabai -m window --focus stack.next || yabai -m window --focus stack.first
default < hyper - 0x45 : yabai -m window --focus stack.next || yabai -m window --focus stack.first
# Stack windows, Hyper - 3
default < hyper + fn - f3 : yabai -m window east --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus || yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus
default < lcmd + lshift + lctrl - 0x52 : yabai -m window east --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus || yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus

# Open Apps
scripts < hyper - e : open ~/
scripts < hyper - t : open -n -a "iTerm"
scripts < hyper - d : open -n -a "DaVinci Resolve"
scripts < hyper - b : open -n -a "Safari"
scripts < hyper - s : open -n -a "Spotify"
scripts < hyper - o : open -n -a "Obsidian"
scripts < hyper - w : open -n -a "Telegram"
scripts < hyper - y : open -n -a "kitty"
scripts < hyper - v : open "BetterDisplay"

# Sys Control
# Dark mode, Hyper - brackets
scripts < 0x1E : dark-mode on
scripts < 0x21 : dark-mode off
scripts < 0x1B : yabai -m config focus_follows_mouse off
scripts < 0x18 : yabai -m config focus_follows_mouse autofocus
# Yabai SKHD Sketchybar refresh
scripts < fn - f1 : sketchybar --reload
scripts < fn - f2 : yabai --restart-service
scripts < fn - f3 : yabai --restart-service && sketchybar --reload
scripts < fn - f4 : skhd --restart-service

# Connect sidecar, F11, F12
# hyper + fn - f11 : ./BetterDisplay toggle sidecarConnected -name="61A4302B-EEA2-4533-9F07-EB2478EC3151" on
# hyper + fn - f12 : ./BetterDisplay toggle sidecarConnected -name="61A4302B-EEA2-4533-9F07-EB2478EC3151" off

# Focus Spaces
default < hyper - 0x52 : yabai -m space --focus next || yabai -m space --focus first
default < hyper - 0x53 : yabai -m space --focus one
default < hyper - 0x54 : yabai -m space --focus two
default < hyper - 0x55 : yabai -m space --focus three
default < hyper - 0x56 : yabai -m space --focus four
default < hyper - 0x57 : yabai -m space --focus five
default < hyper - 0x58 : yabai -m space --focus six
default < hyper - 0x59 : yabai -m space --focus seven
default < hyper - 0x5B : yabai -m space --focus eight
default < hyper - 0x5C : yabai -m space --focus nine

default < hyper - 0x0A : yabai -m space --focus next || yabai -m space --focus first
default < hyper - 0x12 : yabai -m space --focus one
default < hyper - 0x13 : yabai -m space --focus two
default < hyper - 0x14 : yabai -m space --focus three
default < hyper - 0x15 : yabai -m space --focus four

