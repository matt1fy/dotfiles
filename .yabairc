#!/usr/bin/env bash

# Created by Matt1fy

# LOAD SCRIPTING ADDITIONS
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

source "$HOME/.config/sketchybar/mResources/mColors.sh" # Load my defined colors

# Global settings
yabai -m config                                    \
    external_bar                 all:32:0          \
    menubar_opacity              1.0               \
    mouse_follows_focus          on                \
    focus_follows_mouse          off               \
    display_arrangement_order    horizontal        \
    window_origin_display        cursor            \
    window_placement             second_child      \
    window_zoom_persist          on                \
    window_shadow                float             \
    window_animation_duration    0.2               \
    window_animation_easing      ease_in_out_expo  \
    window_opacity_duration      0.2               \
    window_opacity               on                \
    active_window_opacity        1.0               \
    normal_window_opacity        0.85              \
    window_border                on                \
    window_border_hidpi          on                \
    window_border_width          2.5               \
    window_border_radius         12                \
    active_window_border_color   $ACCENTGOLDII     \
    normal_window_border_color   $TRANSPARENT      \
    insert_feedback_color        0xa61becac        \
    split_ratio                  0.50              \
    split_type                   auto              \
    auto_balance                 off               \
    top_padding                  06                \
    bottom_padding               06                \
    left_padding                 06                \
    right_padding                06                \
    window_gap                   05                \
    layout                       bsp               \
    mouse_modifier               ctrl              \
    mouse_action1                move              \
    mouse_action2                resize            \
    mouse_drop_action            stack

# insert_feedback_color old=0xffd75f5f

# RULES
# Exclude problematic apps from being managed
yabai -m rule --add app="^(LuLu|Calculator|Software Update|Dictionary|VLC|System Preferences|System Settings|zoom.us|Photo Booth|Archive Utility|Python|LibreOffice|App Store|Steam|Alfred|Activity Monitor|SF Symbols|ColorSlurp)$" manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
yabai -m rule --add label="Select file to save to" app="^Inkscape$" title="Select file to save to" manage=off

# Specific Spaces #TODO Refine this pls
yabai -m rule --add app="^Safari$" space=^1
yabai -m rule --add app="^Xcode$" space=^1
yabai -m rule --add app="^Adobe Lightroom$" space=^2
yabai -m rule --add app="^Adobe Photoshop$" space=^2
yabai -m rule --add app="^Adobe After Effects$" space=^2
yabai -m rule --add app="^Finder$" space=^3
yabai -m rule --add app="^iTerm2$" space=^4

yabai -m config layout bsp

echo "yabai configuration loaded.."


